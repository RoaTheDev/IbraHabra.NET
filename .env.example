DB_SERVER=YourHost
DB_USER=YourDBUser
DB_PASS=YourDbPass
DB_NAME=ibrahabra_db

# Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7001;http://localhost:5001
JWT__SECRET=YourSecret
JWT__REQUIRE_HTTPS=false
JWT__ISSUER=IbraHabra
JWT__AUDIENCE=IbraHabra.Domain.Coordinator
# Identity Configuration
IDENTITY__PASSWORD__REQUIREDIGIT=true
IDENTITY__PASSWORD__REQUIRELOWERCASE=true
IDENTITY__PASSWORD__REQUIRENONALPHANUMERIC=true
IDENTITY__PASSWORD__REQUIREUPPERCASE=true
IDENTITY__PASSWORD__REQUIRELENGTH=8
IDENTITY__PASSWORD__REQUIREDUNIQUECHARS=1
IDENTITY__LOGIN__REQUIRE_EMAIL_CONFIRMATION=false
IDENTITY__LOGIN__REQUIRE_PHONENUMBER_CONFIRMATION=false
IDENTITY__LOGIN__REQUIRE_ACCOUNT_CONFIMRATION=false
# OpenIddict Configuration (for production)
OPENIDDICT__SIGNINGCERT__PATH=/path/to/signing-cert.pfx
OPENIDDICT__SIGNINGCERT__PASSWORD=cert_password
OPENIDDICT__ENCRYPTIONCERT__PATH=/path/to/encryption-cert.pfx
OPENIDDICT__ENCRYPTIONCERT__PASSWORD=cert_password

## Email Service (if using)
#Email__SmtpServer=smtp.gmail.com
#Email__SmtpPort=587
#Email__SmtpUsername=your-email@gmail.com
#Email__SmtpPassword=your-app-password
#Email__FromEmail=noreply@ibrahabra.com
#Email__FromName=IbraHabra IAM
#
## JWT Configuration (if using custom JWT)
#Jwt__Key=your-super-secure-key-that-is-at-least-32-characters-long
#Jwt__Issuer=https://your-domain.com
#Jwt__Audience=https://your-domain.com
#Jwt__ExpiryInMinutes=60
#
## Logging
#Logging__LogLevel__Default=Information
#Logging__LogLevel__Microsoft=Warning
#Logging__LogLevel__Microsoft.Hosting.Lifetime=Information
#
## Rate Limiting
#RateLimit__PermitLimit=100
#RateLimit__Window=00:01:00
#RateLimit__ReplenishmentPeriod=00:00:10
#RateLimit__TokensPerPeriod=10
#
## CORS (if needed)
#CORS__AllowedOrigins=https://localhost:3000,https://your-frontend-domain.com
#
## Redis (if using for caching/sessions)
#Redis__ConnectionString=localhost:6379
#
## Health Checks
#HealthChecks__UI__Enabled=true
#HealthChecks__UI__Path=/health
#
## Security Headers
#Security__ContentSecurityPolicy=default-src 'self'
#Security__StrictTransportSecurity=max-age=31536000; includeSubDomains